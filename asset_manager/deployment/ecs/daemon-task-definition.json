{
  "executionRoleArn": "arn:aws:iam::$account:role/fulcrum-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::$account:role/fulcrum-ecs-execution-role",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "family": "$app-daemon-task",
  "containerDefinitions": [
    {
      "name": "$app-daemon",
      "image": "",
      "command": [
        "run-prod-daemon"
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "fulcrum/$app/daemon",
          "awslogs-region": "$region",
          "awslogs-stream-prefix": "$app-daemon"
        }
      },
      "environment": [],
      "secrets": [],
      "memoryReservation": 512,
      "essential": true
    }
  ]
}
