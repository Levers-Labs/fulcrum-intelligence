{
    "blocks": [
        {
            "type": "header",
            "text": {
                "type": "plain_text",
                "text": "ðŸ’° {{ report_name }}",
                "emoji": true
            }
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "*{{ start_date }} - {{ end_date }}*"
            }
        },
        {% for metric in metrics %}
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "{% if metric.current_value > metric.previous_value %}\uD83D\uDFE2{% else %}\uD83D\uDD34{% endif %} {{ metric.current_value }} *{{ metric.label }}* ({{ metric.absolute_change }} ({{metric.percentage_change}}%))",
                "emoji": true
            }
        },
        {% endfor %}
        {
            "type": "divider"
        },
        {
            "type": "context",
            "elements": [
                {
                    "type": "mrkdwn",
                    "text": "Generated on {{ fetched_at }} UTC"
                }
            ]
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "<https://app.leverslabs.com |View full report â†’>"
            }
        }
    ]
}
