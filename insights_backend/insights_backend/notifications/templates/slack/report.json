{
    "blocks": [
        {
            "type": "header",
            "text": {
                "type": "plain_text",
                "text": "üí∞ {{ grain | title }} Metrics Report",
                "emoji": true
            }
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "*{{ start_date }} - {{ end_date }}*"
            }
        },
        {% for report in reports %}
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "{% if report.condition > 0 %}‚ÜóÔ∏è{% else %}‚ÜòÔ∏è{% endif %} *{{ report.metric.label }}:* {{ report.metric.value }}"
            }
        },
        {% endfor %}
        {
            "type": "divider"
        },
        {
            "type": "context",
            "elements": [
                {
                    "type": "mrkdwn",
                    "text": "Generated on {{ time }} UTC"
                }
            ]
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "<https://app.leverslabs.com |View full report ‚Üí>"
            }
        }
    ]
}
