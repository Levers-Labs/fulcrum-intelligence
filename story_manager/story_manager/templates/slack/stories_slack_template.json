{
	"blocks": [
		{
			"type": "header",
			"text": {
				"type": "plain_text",
				"text": "ðŸš€ Story Updates for {{ grain }} Grain - Metric ID: {{ metric_id }}",
				"emoji": true
			}
		},
        {% set previous_group = None %}
		{% for story in stories %}
		  {% if story.story_group != previous_group %}
			{
			  "type": "section",
			  "text": {
				"type": "mrkdwn",
				"text": "*{{ story.story_group }}*"
			  }
			},
			{% set previous_group = story.story_group %}
		  {% endif %}
		  {
			"type": "section",
			"text": {
			  "type": "mrkdwn",
			  "text": "[_*{{ story.metric_id }}*_] *{{ story.title }}*\n{{ story.detail }}"
			}
		  },
		{% endfor %}
		{
			"type": "divider"
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "Generated on {{time}} UTC"
				}
			]
		},
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "<https://app-dev.leverslabs.com?grains={{grain}}&metric_ids={{metric_id}}&story_date_start={{time}}|View in app>"
			}
		}
	]
}
