{
	"blocks": [
		{
			"type": "header",
			"text": {
				"type": "plain_text",
				"text": "ðŸš€ [{{ metric.label }}] Stories â€¢ {{ grain|title }}",
				"emoji": true
			}
		},
        {% set current_group = namespace(value=None) %}
		{% for story in stories %}
		  {% if story.story_group != current_group.value %}
            {% if not loop.first %}
            {
                "type": "divider"
            },
            {% endif %}
			{
			  "type": "section",
			  "text": {
				"type": "mrkdwn",
				"text": "*{{ story.story_group }}*"
			  }
			},
			{% set current_group.value = story.story_group %}
		  {% endif %}
		  {
			"type": "section",
			"text": {
			  "type": "mrkdwn",
			  "text": "*{{ story.title }}*\n{{ story.detail }}"
			}
		  },
		{% endfor %}
		{
			"type": "divider"
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "Generated on {{time}} UTC"
				}
			]
		},
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "<https://app-dev.leverslabs.com?grains={{grain}}&metric_ids={{metric_id}}&story_date_start={{time}}|View in app>"
			}
		}
	]
}
